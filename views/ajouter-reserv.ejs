<%- include ('layout/headerUser') %>

    <!DOCTYPE html>
    <html lang="fr">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Réserver une Salle</title>
        <style>
            /* Styles CSS */
            
            body {
                font-family: Arial, sans-serif;
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                background-color: #f4f4f4;
            }
            
            .container {
                max-width: 800px;
                margin: 20px auto;
                padding: 20px;
                background-color: #fff;
                border-radius: 5px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }
            
            h1 {
                color: #333;
                text-align: center;
            }
            
            label {
                display: block;
                margin-bottom: 5px;
            }
            
            input[type="text"],
            input[type="number"],
            input[type="date"],
            input[type="time"],
            input[type="file"],
            button {
                width: 100%;
                padding: 8px;
                margin-bottom: 10px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }
            
            button {
                background-color: #e6cede;
                color: #fff;
                border: none;
                cursor: pointer;
            }
            
            button:hover {
                background-color: #6d376a;
            }
            /* Styles CSS pour le body et le header */
            
            body {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                margin: 0;
                padding: 0;
                background-color: #f8f9fa;
                color: #333;
            }
            
            h4 {
                font-size: 20px;
                color: #7e073f;
                text-transform: uppercase;
                letter-spacing: 3px;
                font-weight: bold;
                font-style: italic;
                text-shadow: 2px 2px 2px rgba(78, 29, 59, 0.1);
            }
            
            header {
                background-color: white;
                color: #f5a8d7;
                padding: 10px;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }
            
            header img {
                width: 80px;
                height: 80px;
            }
            
            nav ul {
                list-style-type: none;
                display: flex;
            }
            
            nav ul li {
                margin-right: 20px;
            }
            
            nav ul li a {
                color: #4b0331;
                text-decoration: none;
                display: flex;
                align-items: center;
                transition: color 0.3s ease-in-out;
            }
            
            nav ul li a i {
                margin-right: 5px;
            }
            
            nav ul li a:hover {
                color: #d8a1bf;
                /* Couleur jaune or pour le hover */
            }
            
            .container {
                max-width: 1200px;
                margin: 20px auto;
                padding: 0 20px;
            }
            
            h1 {
                margin-bottom: 20px;
                color: #ac6496;
            }
        </style>
    </head>

    <body>

        <!-- Header -->


        <div class="container">
            <h1>Résserver une Salle
                <%= SalleName.title %>
            </h1>


            <!-- Formulaire d'ajout de salle -->
            <form id="ajouter-reserv-form" action="/ajouter-reserv" method="POST">

                <input type="text" id="SalleName" name="SalleName" value="<%= SalleName.title %>" hidden>


                <label for="Nom">Votre prenom:</label>
                <input type="text" id="Nom" name="Nom">

                <label for="Capacite">Votre nom :</label>
                <input type="text" id="Capacite" name="Capacite">

                <label for="Equipments">Votre E-mail :</label>
                <input type="email" id="Equipments" name="Equipments">

                <label for="Disponibilites">Date de réservation :</label>
                <input type="date" id="Disponibilites" name="Disponibilites">

                <label for="heure_debut">Heure de début :</label><br>
                <input type="time" id="heure_debut" name="heure_debut"><br>

                <label for="heure_fin">Heure de fin :</label><br>
                <input type="time" id="heure_fin" name="heure_fin"><br>


                <label for="Tarif">Nombre personne :</label>
                <input type="number" id="Tarif" name="Tarif" required>

                <button type="submit">Réserver la Salle</button>
            </form>
        </div>
    </body>

    </html>

    <script>
        // Add an event listener to the button
        document.getElementById('indexUserButton').addEventListener('click', async() => {
            try {
                // Make a POST request to /indexUser
                const response = await fetch('/indexUser', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    // Optionally, you can include a request body if needed
                    // body: JSON.stringify({ /* data to send */ })
                });

                // Check if the request was successful
                if (response.ok) {
                    // Redirect to the indexUser page
                    window.location.href = '/indexUser';
                } else {
                    // Handle errors
                    console.error('Error:', response.statusText);
                }
            } catch (error) {
                console.error('Error:', error);
            }
        });
    </script>

    <%- include ('layout/footer') %>